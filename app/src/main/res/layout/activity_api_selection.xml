<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".ApiSelectionActivity">

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp">

        <!-- App Logo/Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="48dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_launcher_foreground"
                android:contentDescription="App Logo"
                android:background="@drawable/premium_badge_background"
                android:padding="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Glow &amp; Grace"
                android:textAppearance="@style/TextAppearance.SkincareApp.Headline3"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Premium Skincare Collection"
                android:textAppearance="@style/TextAppearance.SkincareApp.Body1"
                android:textColor="@color/white"
                android:alpha="0.9" />

        </LinearLayout>

        <!-- API Selection Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/card_background"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            style="@style/Widget.SkincareApp.Card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="32dp">

                <!-- Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Choose Your Experience"
                    android:textAppearance="@style/TextAppearance.SkincareApp.Headline5"
                    android:textColor="@color/text_primary"
                    android:textAlignment="center"
                    android:layout_gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Select your preferred API technology"
                    android:textAppearance="@style/TextAppearance.SkincareApp.Body2"
                    android:textColor="@color/text_secondary"
                    android:textAlignment="center"
                    android:layout_gravity="center" />

                <!-- API Selection Spinner -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:hint="API Technology"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxStrokeColor="@color/primary"
                    app:hintTextColor="@color/primary"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <AutoCompleteTextView
                        android:id="@+id/apiSelectionSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:minHeight="56dp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Continue Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/fetchProductsButton"
                    style="@style/Widget.SkincareApp.Button"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="24dp"
                    android:text="Continue to App"
                    android:textAppearance="@style/TextAppearance.SkincareApp.Button"
                    app:icon="@drawable/ic_launcher_foreground"
                    app:iconGravity="textStart" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Footer -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Experience the difference in API performance"
            android:textAppearance="@style/TextAppearance.SkincareApp.Caption"
            android:textColor="@color/white"
            android:alpha="0.7"
            android:textAlignment="center" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
