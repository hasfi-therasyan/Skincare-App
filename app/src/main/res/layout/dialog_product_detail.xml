<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/dialogProductImageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:contentDescription="@string/product_image"
            android:scaleType="centerCrop"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/dialogProductNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="12dp"
            android:text="Product Name" />

        <TextView
            android:id="@+id/dialogProductDescriptionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBody1"
            android:layout_marginBottom="12dp"
            android:text="Full product description goes here. This can be a longer text describing the product in detail." />

        <TextView
            android:id="@+id/dialogProductPriceTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:textColor="@color/design_default_color_primary"
            android:textStyle="bold"
            android:gravity="center"
            android:text="$99.99" />

        <Button
            android:id="@+id/dialogAddToCartButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_to_cart"
            android:layout_marginTop="16dp"
            android:layout_gravity="center" />

    </LinearLayout>
</ScrollView>
